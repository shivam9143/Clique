<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="?actionBarSize"
    android:layout_height="wrap_content">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/app_layout_margin"
    tools:context=".ui.main.profile.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/huddleLinkLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_back"
        android:padding="@dimen/dimen_2sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="6"
        app:layout_constraintTop_toTopOf="parent">

          <TextView
              android:id="@+id/huddlLinkTv"
              style="@style/Body.12.Huddl"
              android:layout_width="0dp"
              android:layout_height="0dp"
              android:layout_marginLeft="10dp"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toLeftOf="@id/copyLinkIV"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintHorizontal_weight="3"
              app:layout_constraintBottom_toBottomOf="parent"
              android:gravity="center_vertical|start"
              android:text="@string/huddl_link_hint"/>

          <ImageView
              android:id="@+id/copyLinkIV"
              android:layout_width="0dp"
              android:layout_height="0dp"
              app:layout_constraintHorizontal_weight="1"
              app:layout_constraintLeft_toRightOf="@id/huddlLinkTv"
              app:layout_constraintRight_toLeftOf="@id/shateHuddleLink"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:gravity="center_vertical|start"
              android:text="@string/huddl_link_hint"/>

      <com.google.android.material.button.MaterialButton
          android:id="@+id/shateHuddleLink"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          style="@style/App.Theme.Button.Red.Rect"
          android:layout_gravity="end"
          app:layout_constraintHorizontal_weight="2"
          app:layout_constraintLeft_toRightOf="@id/copyLinkIV"
          app:layout_constraintRight_toRightOf="parent"
          android:gravity="center_horizontal|center_vertical"
          android:text="@string/share"
          android:layout_margin="4dp"
          android:textAllCaps="true"
          />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imagesnVideosRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_margin"
        android:orientation="horizontal"
        tools:listitem="@layout/profile_images_layout_item"
        app:layout_constraintTop_toBottomOf="@id/huddleLinkLayout"
        android:minHeight="300dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/userDetailsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imagesnVideosRv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginVertical="@dimen/app_layout_margin_top_20">

        <TextView
            android:id="@+id/creatorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Body.16.Huddl"
            tools:text="Creator Name"/>

        <TextView
            android:id="@+id/huddlUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/creatorName"
            app:layout_constraintTop_toTopOf="@id/creatorName"
            app:layout_constraintBottom_toBottomOf="@id/creatorName"
            android:layout_marginLeft="@dimen/standard_margin"
            android:gravity="center_vertical"
            android:alpha=".6"
            style="@style/Body.12.Huddl"
            tools:text="huddlUserName"/>

        <TextView
            android:id="@+id/userCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/huddlUserName"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dimen_5sdp"
            style="@style/Body.10.Huddl"
            android:alpha=".6"
            tools:text="huddlUserName"/>

        <TextView
            android:id="@+id/userBio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userCategory"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dimen_5sdp"
            style="@style/Body.10.Huddl"
            tools:text="user bio"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setupVideoCallsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_2sdp"
        android:background="@drawable/rounded_corner_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userDetailsCard"
        android:layout_marginVertical="@dimen/app_layout_margin_top_20">

        <TextView
            android:id="@+id/oneOnOneVcTV"
            style="@style/Body.12.Huddl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|start"
            android:text="@string/one_on_one_vc"/>

        <TextView
            android:id="@+id/addAvailTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Body.10.Huddl"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="@id/oneOnOneVcTV"
            app:layout_constraintTop_toBottomOf="@id/oneOnOneVcTV"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_vertical|start"
            android:alpha=".5"
            android:text="Add your availability prices"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/setupVcBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/App.Theme.Button.Red.Rect"
            android:layout_gravity="end"
            app:layout_constraintLeft_toRightOf="@id/addAvailTv"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/setup"
            android:layout_marginLeft="@dimen/app_layout_margin_40"
            android:textAllCaps="true"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/myLinks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_50"
        android:paddingVertical="@dimen/dimens_32"
        android:layout_marginTop="@dimen/app_layout_margin_top_20"
        app:layout_constraintTop_toBottomOf="@id/setupVideoCallsLayout">

        <TextView
            android:id="@+id/myLinksTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Title.Huddl.InverterColor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/my_links"/>

        <TextView
            android:id="@+id/addLinksTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Body.14.Huddl.InvertedColor"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/standard_margin"
            app:layout_constraintTop_toBottomOf="@id/myLinksTV"
            android:text="@string/add_your_social_media_links_or_other_custom_links"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>